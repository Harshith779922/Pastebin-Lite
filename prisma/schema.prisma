// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paste {
  id            String   @id @db.VarChar(32)
  content       String   @db.Text
  createdAt     DateTime @default(now())
  expiresAt     DateTime?
  maxViews      Int?
  currentViews  Int      @default(0)

  @@index([expiresAt])
}
